				B changed_lane, 
				~B steering_contr, 
				~B sp_contr, 
				B initial_distance,
				~G set_spacing(X) [achieve]} 
				<- 
				+!speed_contr(1) [perform], 
				+!steering_contr(1) [perform];	
										
