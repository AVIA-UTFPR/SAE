+!platoon_m(SENDER1, FRONT4) [achieve]: 
				{B name(SENDER1), 
				~B join_agreement(SENDER1, FRONT4)} 
				<- 
				+!speed_contr(0) [perform], 
				+!steering_contr(0) [perform],
				.send(leader, :tell, message(SENDER1, 1, FRONT4)), -.lock, 
				*join_agreement(SENDER1, FRONT4);


