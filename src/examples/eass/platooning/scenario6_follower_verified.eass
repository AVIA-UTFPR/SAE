				{B name(SENDER2), 
				B join_agreement(SENDER2, FRONT5), 
				~B changed_lane} 
				<- 
				+!speed_contr(0) [perform], 
				+!steering_contr(0) [perform], 
				perf(join_ok(1)), 
				*changed_lane;


