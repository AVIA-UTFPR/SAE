+!leave_platoon [achieve]: {B name(X), 
							B leave_agreement(X),
							~B sp_contr, 
							~B steering_contr, 
							~B changed_lane} 
							<- 
							perf(join_ok(0)), 
							*changed_lane;

+!leave_platoon [achieve]: {B changed_lane,
						   B name(X), 
						   ~B sp_contr, 
						   ~B steering_contr}
						   <- 
						   .send(leader, :tell, message(X, 2)), 
						   *no_platoon_m;
